<idea-plugin>
  <id>com.github.mendess2526.javaclonegenerator</id>
  <name>Java Encapsulated Clone Constructor</name>
  <version>1.0</version>
  <vendor email="pedro.mendes.26t@gmail.com" url="http://www.github.com/Mendess2526/JavaCloneGenerator">JavaCloneGenerator</vendor>

  <description><![CDATA[
      Allows the user to generate an encapsulated clone constructor
    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="generateCloneConstructor" class="com.github.mendess2526.javaclonegenerator.GenerateAction"
            text="CloneConstructor" description="Generates the clone constructor">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
    </action>
  </actions>

</idea-plugin>